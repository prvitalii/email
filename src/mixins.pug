mixin social(src, alt)
	td
		a(href="#" style="padding: 0 5px; text-decoration: underline; color: #d3d3d3; font: 15px Arial, sans-serif; line-height: 15px;" target="_blank")
			img(src= src, alt= alt, border="0" width="25" height="25")

mixin founder()
	table(cellspacing="0", cellpadding="0", border="0" style="margin: 0 15px; padding: 30px 0 0 0; display: block;")
		tbody
			tr
				td(style="")
					img(src="https://i.imgur.com/CctBpGG.jpg" onerror="this.style.display='none'", alt="" border="0" width="50" style="display:block; margin: 0 15px 0 0;")
				td(style="text-align: left; color: #000; font: 12px Arial, sans-serif; line-height: 15px; padding: 0 100px 0 0") Best regards, Andrew
					br
					span(style="text-align: left; color: #d3d3d3; font: 12px Arial, sans-serif; line-height: 15px;") Your Apple Certifyed Support professional
				+social("https://i.imgur.com/yMIK47z.jpg", "Facebook")
				+social("https://i.imgur.com/ufvV3Qr.jpg", "Twitter")
				+social("https://i.imgur.com/Omeafat.jpg", "Google+")
				+social("https://i.imgur.com/JVCf36N.jpg", "YouTube")

mixin representative(imgSrc, country, tel)
	td
		img(src=imgSrc, onerror="this.style.display='none'", alt="" border="0" width="25" style="display:block;")
	td(style="text-align: left")
		span(style="color: #d3d3d3; font: 14px Arial, sans-serif; line-height: 15px; -webkit-text-size-adjust:none;")=country
		| #{tel}

mixin worldWide()
	table(width="100%", cellspacing="0", cellpadding="0", border="0", style="margin: 0 0 0 15px; padding: 20px 0;")
		tbody
			tr
				+representative("https://i.imgur.com/5OJwfNw.jpg", "USA: ", "1(888)572-5876")
				+representative("https://i.imgur.com/uf9Q3n3.jpg", "AU: ", "1(800)462-715")
				+representative("https://i.imgur.com/hK2tfWI.jpg", "UK: ", "0(808)189-1280")

