mixin clever(imgSrc, alt, fontSize)
	td(align="center" style="color: #000; font: " + fontSize + " Arial, sans-serif; font-weight: bold; line-height: 50px; -webkit-text-size-adjust:none;") 
		img(src=imgSrc, alt=alt, border="0" width="400" style="display: block;")